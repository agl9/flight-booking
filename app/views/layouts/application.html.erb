<!DOCTYPE html>
<html>
  <head>
    <title>Makemytrip - Best travel booking site</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
      <div class='notification is-success global-notificaiton'>
        <p class="notice"><%= notice %></p>
      </div>
    <%end%>

    <% if flash[:alert]%>
      <div class='notification is-danger global-notificaiton'>
        <p class="alert"><%= alert %></p>
      </div>
    <%end%>

    <nav class = 'navbar is-fixed-top'>
      <div class = 'navbar-brand'>
        <%= link_to root_path, class: 'navbar-item' do%>
          <h1 class = 'title is-4' id = 'logo'>Makemytrip</h1>
        <%end%> 

        <div class ='navbar-burger burger' data-target = 'navbarExample'>
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id = 'navbarExample' class ='navbar-menu'>
        <div class = 'navbar-end'>
          <div class = 'navbar-item'>
            <p>
              <div><%= link_to 'New booking', root_path, class: 'button' %></div>
            </p>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
